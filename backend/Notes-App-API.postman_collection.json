                "exec": [
                  "pm.test('API key authentication works', function () {",
                  "    pm.expect(pm.response.code).to.not.equal(401);",
                  "    if (pm.response.code === 401) {",
                  "        console.log('API Key Authentication Failed. Check if API_KEY env var matches collection variable.');",
